    "typescript",
    "traits",
    "php-traits",
    "class-composition",
    "composition",
    "mixins",
    "oop",
    "inheritance",
    "instanceof",
    "runtime-types",
    "symbol-hasinstance"
  ],
  "main": "dist/main.min.js",
